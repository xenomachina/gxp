<gxp:template name="com.google.gxp.compiler.functests.CondAttrGxp"
              xmlns="http://www.w3.org/1999/xhtml"
              xmlns:expr="http://google.com/2001/gxp/expressions"
              xmlns:gxp="http://google.com/2001/gxp">

<gxp:param name='lifeCount' type='int' />

<img expr:src='lifeCount + "lives.png"'>
  <gxp:attr name="alt" cond='lifeCount &gt;= 0'>
    You have <gxp:eval expr='lifeCount'/> lives left.
  </gxp:attr>
</img>

</gxp:template>
